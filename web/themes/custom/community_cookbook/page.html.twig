{#
  Custom page.html.twig for Community Cookbook
  Based on Olivero with added regions
#}

<!DOCTYPE html>
<html{{ html_attributes }}>
  <head>
    <head-placeholder token="{{ placeholder_token }}">
    <title>{{ head_title }}</title>
    <css-placeholder token="{{ placeholder_token }}">
    <js-placeholder token="{{ placeholder_token }}">
  </head>
  <body{{ attributes }}>
    <a href="#main-content" class="visually-hidden focusable skip-link">
      {{ 'Skip to main content'|t }}
    </a>

    {% if page.header %}
      <header role="banner">
        {{ page.header }}
      </header>
    {% endif %}

    {% if page.primary_menu or page.secondary_menu %}
      <nav role="navigation">
        {{ page.primary_menu }}
        {{ page.secondary_menu }}
      </nav>
    {% endif %}

    {# Show these sections ONLY on the homepage #}
   {% if is_front %}
      {% if page.hero %}
  <section class="region-hero hero-background">
    {{ page.hero }}
  </section>
{% endif %}


     {% if page.featured_recipes %}
      <section class="region-featured-recipes featured-recipes">
    {{ page.featured_recipes }}
       </section>
    {% endif %}


      {% if page.about %}
        <section class="region-about">
          {{ page.about }}
        </section>
      {% endif %}

      {% if page.events %}
        <section class="region-events">
          {{ page.events }}
        </section>
      {% endif %}

      {% if page.contribute %}
        <section class="region-contribute">
          {{ page.contribute }}
        </section>
      {% endif %}
    {% endif %}

    <main role="main" id="main-content">
      {% if page.content_above %}
        <div class="region-content-above">
          {{ page.content_above }}
        </div>
      {% endif %}

      <div class="layout-content">
        {{ page.content }}
      </div>

      {% if page.content_below %}
        <div class="region-content-below">
          {{ page.content_below }}
        </div>
      {% endif %}
    </main>

    {% if page.sidebar %}
      <aside class="layout-sidebar" role="complementary">
        {{ page.sidebar }}
      </aside>
    {% endif %}

    <footer role="contentinfo">
      {% if page.footer_top %}
        <div class="footer-top">
          {{ page.footer_top }}
        </div>
      {% endif %}
      {% if page.footer %}
        <div class="footer-classic">
          {{ page.footer }}
        </div>
      {% endif %}
      {% if page.footer_bottom %}
        <div class="footer-bottom">
          {{ page.footer_bottom }}
        </div>
      {% endif %}
    </footer>

    <js-bottom-placeholder token="{{ placeholder_token }}">
  </body>
</html>
